{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": false,
        "module": "es6",
        "jsx": "react", 
        "target": "es5",
        "allowJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017", "dom"],
        "moduleResolution": "node",
        "baseUrl": "src",
        "typeRoots" : ["node_modules/@types", "./typings"],
        "paths":{
            "*": [
              "*",
              "src/*"
            ]
          }
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "./node_modules/"        
    ]
}